URxvt.scrollstyle: plain
URxvt.scrollBar: falce
Xcursor.size: 16
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault
! urxvt
URxvt*.scrollBar: false
URxvt.skipBuiltinGlyphs:      false


URxvt.font: xft:UbuntuMono Nerd Font:size=12, \
            xft:Inconsolata Nerd Font Mono:size=12, \
            xft:DejaVuSansMono Nerd Font:size=12, \
            xft:DroidSansMono Nerd Font:size=12, \
            xft:FuraMono Nerd Font:size=12, \
            xft:RobotoMono Nerd Font:size=12, \
            xft:Noto Sans Mono:size=12, \
            xft:Monospace:style=Medium:size=12   
URxvt.boldFont: xft:UbuntuMono Nerd Font:style=Bold:size=12:antialias=true:hinting=true
URxvt.italicFont:   xft:UbuntuMono Nerd Font:style=Italic:size=12:antialias=true:hinting=true
URxvt.boldItalicFont:   xft:UbuntuMono Nerd Font:style=Bold Italic:size=12:antialias=true:hinting=true

URxvt.termName: rxvt-256color
URxvt.cursorBlink: true

! Key bindings

URxvt*.keysym.Shift-Control-V: eval:paste_clipboard
URxvt*.keysym.Shift-Control-C: eval:selection_to_clipboard

! Word navigation
URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C

! Scroll
URxvt.keysym.Shift-Up:        command:\033]720;1\007
URxvt.keysym.Shift-Down:      command:\033]721;1\007

URxvt*.iso14755: false
URxvt*.iso14755_52: false
URxvt*imLocale: en_US.UTF-8
URxvt.saveLines: 100000

URxvt.scrollTtyOutput: false
URxvt.letterspace: -1
URxvt.linespace: 0
URxvt.internalBorder: 6 

! Extensions
URxvt.perl-ext-common: default,resize-font,matcher
URxvt.url-launcher: /usr/bin/xdg-open 
URxvt.matcher.button: 1

URxvt.keysym.C-minus:     resize-font:smaller
URxvt.keysym.C-equal:      resize-font:bigger
URxvt.keysym.C-plus:     resize-font:reset
URxvt.keysym.C-question:  resize-font:show

! Pointer
URxvt.pointerBlank:           true

! rofi
rofi.font: UbuntuMono Nerd Font 12


